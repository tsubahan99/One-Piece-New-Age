            <div class="audio-controls">
                <button class="control-btn" onclick="previousTrack()">‚èÆ</button>
                <button class="control-btn" id="playPauseBtn" onclick="togglePlay()">‚ñ∂</button>
                <button class="control-btn" onclick="nextTrack()">‚è≠</button>
            </div>
            <div class="progress-bar">
                <div class="progress" id="progressBar"></div>
            </div>
            <button class="control-btn" onclick="closePlayer()">‚úï</button>
