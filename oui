    <script>
        let isPlaying = false;
        let currentProgress = 0;
        let progressInterval;

        function playFeatured() {
            playBook("L'√âcho des Royaumes Oubli√©s", "Elena Blackwood");
        }

        function playBook(title, author) {
            document.getElementById('currentTitle').textContent = title;
            document.getElementById('currentAuthor').textContent = '~ ' + author;
            document.getElementById('audioPlayer').classList.add('active');
            
            // Simulate audio loading
            setTimeout(() => {
                togglePlay();
            }, 500);
        }

        function togglePlay() {
            const playBtn = document.getElementById('playPauseBtn');
            if (isPlaying) {
                playBtn.textContent = '‚ñ∂';
                isPlaying = false;
                clearInterval(progressInterval);
            } else {
                playBtn.textContent = '‚è∏';
                isPlaying = true;
                startProgress();
            }
        }

        function startProgress() {
            progressInterval = setInterval(() => {
                currentProgress += 0.5;
                if (currentProgress >= 100) {
                    currentProgress = 0;
                }
                document.getElementById('progressBar').style.width = currentProgress + '%';
            }, 100);
        }

        function closePlayer() {
            document.getElementById('audioPlayer').classList.remove('active');
            isPlaying = false;
            clearInterval(progressInterval);
            document.getElementById('playPauseBtn').textContent = '‚ñ∂';
            currentProgress = 0;
            document.getElementById('progressBar').style.width = '0%';
        }

        function previousTrack() {
            currentProgress = Math.max(0, currentProgress - 10);
            document.getElementById('progressBar').style.width = currentProgress + '%';
        }

        function nextTrack() {
            currentProgress = Math.min(100, currentProgress + 10);
            document.getElementById('progressBar').style.width = currentProgress + '%';
        }

        // Smooth scrolling for navigation
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({
                        behavior: 'smooth',
                        block: 'start'
                    });
                }
            });
        });

        // Add subtle animations on scroll
        window.addEventListener('scroll', () => {
            const cards = document.querySelectorAll('.book-card');
            cards.forEach(card => {
                const rect = card.getBoundingClientRect();
                const isVisible = rect.top < window.innerHeight && rect.bottom > 0;
                if (isVisible) {
                    card.style.transform = 'translateY(0)';
                    card.style.opacity = '1';
                }
            });
        });
    </script>
